                    <a class="nav-item nav-link" href="#" style="color : rgb(0, 153, 255)">Registruj se</a>
                    <!--/End-->
                  </div>
                </div> 
                <!--/Ostali deo menija-->

                <!--Deo koji gost ne vidi-->
                    <!--Dropdown avatara-->
                    <div class="dropdown show">
                        <img class="avatar" src = '../static/img/avatar.jpg' href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </img>
                        <div class="dropdown-menu bg-info" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item text-black" href="#">Moj profil</a>
                            <a class="dropdown-item text-danger" href="#">Odjavi se</a>
                          </div>
                    </div>
                    <!-- /Dropdown avatar-->
                <!-- /Deo koji gost ne vidi-->    

                <!-- Button response -->

                <button class=" navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation" >
                    <span class="navbar-toggler-icon"></span>
                </button>

                 <!-- /Button response -->
                   
                
                
              </nav>
            <!--/Navbar--> 
            
        </div>
        <!--/Container-->
        <!-- Razdvajanje menija od sadrzaja-->
    </div>
    <!--/Navigacija------------------------------------------------------------------------------------------------------------------>
    
    <!-- Akcije -->
    <div class = 'container bg'>
        <div class=" row text-right" >
            <div class="col-xl-12">
                <a href="" style=" color : white" class=""><i class="fas fa-plus text-success" ></i> Dodaj oglas</a>
                <a href ="/sve_kategorije" class="m-3" style="color: white;"><i class="fas fa-border-all text-warning"></i></i> Vidi sve kategorije</a>
            </div>
            <hr>
            <div class="col-xl-12">
                <a href ="/sve_kategorije/kategorija/<%-kategorija[0].id%>/izmena_kategorije" class="" style="color: white;"><i class="fas fa-edit " style="color : rgb(0, 204, 255)"></i> Izmeni kategoriju</a>
                <a href =" " class="m-3" style="color: white;"><i class="fas fa-trash" style="color : rgb(255, 64, 64)"></i> Obriši kategoriju</a>
            </div>
        </div>
    </div>
    <br>
    <!-- /Akcije -->




    <!-- Filtriranje i pretrazivanje -->
        <div class="container mr-5 mb-3">
            <form action='/sve_kategorije/kategorija/<%-kategorija[0].id%>' method='GET'>
                <div class = 'row '>
    
                    <!-- Naziv-->
                    <div class="col-xl-3">
                        <input  type="text" 
                                class="form-control filter-style" 
                                placeholder="Ključne reči" 
                                name ='kljucneReci'
                                id="kljucneR" 
                                value = '<%-kljucneReci%>'
                                >
                    </div>
                    <!-- /Naziv-->
    
                    <!-- Datum-->
                    <div class="col-xl-3">
    
                       <select class ='form-control filter-style' name = 'sortiranje'>
                        <option value="br_prijava" <% if(sortiranje == 'br_prijava'){ %> selected <%}%>   >
                            Prvo : Aktuelni
                        </option>

                           <option value="desc" <% if(sortiranje == 'desc'){ %> selected <%}%>  >
                                Prvo : Najnoviji
                           </option>
                           <option value="asc" <% if(sortiranje == 'asc'){ %> selected <%}%>>
                                Prvo : Najstariji
                         </option>
                       </select>
    
                    </div>
                    <!-- /Datum-->
    
                    <!-- Dugmici -->
                    <div class="col-xl-3">
                       <button type="submit" class="btn btn-success ">Filtriraj</button> 
                       <a href = '/sve_kategorije/kategorija/<%-kategorija[0].id%>' class="btn btn-danger ">Poništi</a>
                    </div>
                    <!-- /Dugmici -->
                    
                    <!-- Stranica -->
                        <input name = 'strana' hidden value = ''>
                    <!-- Stranica -->
                    
                </div>
            </form>
        </div>
    <!-- /Filtriranje i pretrazivanje -->




    <!-- Detalji o kategoriji -->
        <div class="container">
            <div class = 'text-center  kategorija-naslov'>
                <h1> <%- kategorija[0].naziv %> </h1>
                <!-- DODATI KRATAK OPIS !!!!!!!!!!!!!!-->
            </div>
        </div>
    <!-- /Detalji o kategoriji-->

        

    <!-- Prikaz broja oglasa-->
    <div class="container">
        <span class ='ml-4 mb-3'> 
           
            Prikazani oglasi :  <b> <%-prikazaniPoslovi%> </b> / <%-ukupnoPoslova%>
        </span> 
    </div>
    <!-- /Prikaz broja oglasa -->
    <br>


    

    <!-- Spisak aktivnih oglasa u kategoriji-->
    <div class="container ">
        
        <% for(posao of poslovi) {%>
        <!-- Oglas1-->
        <div class="card  bg-dark mt-1 mb-2 ml-4 mr-4" style="box-shadow: none;" >
            <div class="card-header ">
              <!-- Naziv posla-->
                    <span class = 'text-warning'><%-posao.naziv%></span>
              <!-- /Naziv posla-->
                    <br>
                    <span class='text-secondary small'><%-posao.datum%></span>
            </div>
            
            <div class="card-body ">
                <!-- Potrebne vestine -->
                <p class ='card-text text-success'>
                    <%-posao.potrebne_vestine%>
                </p>
                <!-- /Potrebne vestine -->

                <!-- Kratak opis -->
                <p>
                    <%-posao.kratak_opis%>
                </p>
                 <!-- /Kratak opis -->

                <p class="card-text" style="padding-left: 30px;">
                   
                    <br>
                   
                    <p><a href=""> Detaljnije...</a></p>
                    
                </p>
               
             
            </div>
            <div class="card-footer ">
                <!-- Izmena i brisanej (admin) i odredjeni korisnik-->
                
                <!-- Prijava na poslu-->
                <div class = 'text-right'>
                    <p class ='text-secondary small'>Broj prijava : <%-posao.br_prijava%></p>
                    <i class="fas fa-pen text-info mr-3"></i>
                    <i class="fas fa-trash text-danger mr-3"></i>
                    <a href = '' class='ml-3'> Prijavi se</a>
                </div>
            </div>
          </div>
          <!-- /Oglas1-->
          <%}%>
    </div>
    <!-- /Spisak oglasa-->
    
    
    <!-- Prikaz kad nema poslova za prikazivanje -->
    <% if (ukupnoPoslova <= 0) {%>
    <h2 class="text-center text-secondary">Trenutno nema nijednog oglasa za prikazivanje!</h2>
    <%}%>
    <!-- Prikaz kad nema poslova za prikazivanje -->
   
    <!-- Slucaj kad nema nikakvih podataka za prikaz -->
        <% if (prikazaniPoslovi == 0) {%>
            <div class = 'container'>
                <h3 class="text-center text-secondary">Trenutno nema aktivnih oglasa za prikazivanje!</h3>
            </div> 
        <%}%>

    <!-- /Slucaj kad nema nikakvih podataka za prikaz -->






    
    <!-- Paginacija -->
    <nav>
        <!-- Telo paginacije-->
        <ul class="pagination justify-content-center mt-5    ">

            <!-- Prethodna -->
            <%if (strana != 1) {%>
            <form action="/sve_kategorije/kategorija/<%-kategorija[0].id%>" method="GET" >
                
                <button class="btn text-white bg-dark" name = 'strana' value= <%-prethodnaStrana%> >Prethodna</button> 
               


                  <!-- Filteri -->
                  <input name = 'kljucneReci' value = '<%-kljucneReci%>'  hidden />  
                  <input name = 'sortiranje' value = '<%-sortiranje%>'  hidden /> 
                  <!-- /Filteri -->
                
            </form>
            <%}%>
            <!-- Prethodna -->

            <!-- Trenutna -->
            <li class="page-item active "><a class="btn page-link text-warning bg-dark" href="#"><%-strana%></a></li>
            <!-- Trenutna -->

            <%if(prikazaniPoslovi > 10){%>
            <!-- Sledeća -->
            <form action="/sve_kategorije/kategorija/<%-kategorija[0].id%>" method="GET" >
                <button class="btn text-white bg-dark" name = 'strana' value= <%-sledecaStrana%> >Sledeća&nbsp;&nbsp;&nbsp;&nbsp;</button> 
                <!-- Filteri -->
                <input name = 'kljucneReci' value = '<%-kljucneReci%>'  hidden />  
                <input name = 'sortiranje' value = '<%-sortiranje%>'  hidden /> 
                 <!-- /Filteri -->               
            </form>
            <!-- /Sledeća -->
            <%}%>
        </ul>
        <!-- /Telo paginacije-->
    </nav>
    <!-- /Paginacija -->

   

    <!-- Footer -->
    <div class="container-fluid fixed-bottom footer">
        <!-- Linija -->
        <hr class='bg-white'>
        <div class="row text-center">
            <div class="col-lg-4 col-sm-4 text-secondary">
                nikolavlad63@gmail.com
            </div>
            <div class="col-lg-4 col-sm-4 text-secondary">
                Web oglasi za posao - 2020 <sup>&copy</sup> 
            </div>
            
            <div class="col-lg-4 col-sm-4">
                <a href=""><i class="fab fa-instagram ml-3" style="color:blueviolet"></i></a>
                <a href=""><i class="fab fa-facebook ml-3"></i></a>
                <span class = 'text-secondary'><i class="fas fa-phone-alt ml-3"></i> 0123-456</span> 
            </div>
        </div>
    </div>
    <!-- Footer -->
 

 </body>