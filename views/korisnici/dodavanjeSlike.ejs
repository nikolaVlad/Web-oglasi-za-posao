    <!-- Telo dodavanja slike -->
    <div class="container center " >
        <!-- Forma za dodavanje slike -->
            <form action = '/svi_korisnici/profil/<%-korisnik[0].id%>/slika' method='POST' enctype="multipart/form-data" style="display: flex; justify-content: center;"> 

                <!-- Slika -->
                <div class="form-group col-sm-6" >
                    <!-- Slika -->
                    <div class="  d-flex justify-content-center">
                        <div class="form-group mt-3">
                            <!--Dodavanje/ Izmena slike-->
                            <label for="slika">
                                <img style="border: 3px solid rgba(165, 165, 165, 0.719); padding: 2px;" 
                                <% if (korisnik[0].slika != '') { %>
                                src="/images/uploads/korisnici/<%-korisnik[0].slika%>" 
                                <% } else {%>
                                src="/images/site/place1.png"
                               <% } %>
                                id="slika_pregled"
                                width = '290'
                                height = '240' 
                                
                                />
                                </label>
                            <br>
                            <label for="slika" class="btn btn-outline-light" style="width: 100%;"><i class="fas fa-upload"></i></label>
                            <input type="file" hidden accept="image/*" class="" id="slika" name="slika">
                            <button type="submit" class="btn btn-success mb-3 mt-4" style="width: 100%;">Gotovo</button>
                        </div>


                    </div>
                </div>
                <!-- /Slika-->
            </form>
        <!-- /Forma za dodavanje slike -->
