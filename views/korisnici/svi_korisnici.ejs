    <div class="container text-center"> <b class="h2"> Svi korisnici </b> </div>
    <hr class="container" style="background-color: beige;">
    <div class="container mb-3 mt-2">Prikazani korisnici : <b><%-(ucitani * strana)%></b> / <%-ukupno%></div>


    <!-- Izlistavanje svih korisnika -->
        <div class="container">

            <!-- Tabela-->
            <table class="table table-striped text-white table-dark table-responsive-sm " >
               


                <!-- Naslov -->
                <thead class="bg-info ">
                <!-- Podaci za prikaz -->
                  <tr>
                   
                    <th scope="col"><i class="fas fa-user"></i></i></th>
                    <th scope="col">Ime i prezime</th>
                    <th scope="col">Broj oglasa na koje se prijavio</th>
                    <th scope="col">Broj oglasa koje je postavio</th>
                  </tr>
                <!-- /Podaci za prikaz -->
              
                <!-- Prazan prostor -->
                  <tr style="background-color: #142a4d;">
                    <td colspan="6"></td>
                  </tr>
                <!-- /Prazan prostor -->
                </thead>
                <!-- /Naslov -->
                <% for(korisnik of korisnici ) {%>
                <!-- Telo -->
                <tbody>
                <!-- Podaci o korisniku-->
                  <tr>
                    <th scope="row">#</th>
                    <td><a href = '/svi_korisnici/profil/<%-korisnik.id%>'><%-korisnik.ime%> <%-korisnik.prezime%></a></td>
                    <td><%-korisnik.br_prijavljenih%></td>
                    <td><%-korisnik.br_postavljenih%></td>
                  </tr>
                <!-- /Podaci o korisniku-->

                <!-- Prazan prostor -->
                  <tr style="background-color: #142a4d;">
                    <td colspan='5'></td>
                  </tr>
                <!-- /Prazan prostor-->
                </tbody>
                <!-- Telo -->
                <% } %>
              </table>
              <!-- /Tabela -->

        </div>
    <!-- /Izlistavanje svih korisnika -->







  <!-- Paginacija -->
    <nav>
      <!-- Telo paginacije-->
      <ul class="pagination justify-content-center mt-5    ">

          <!-- Prethodna -->
          <%if (strana != 1) {%>
          <form action="/svi_korisnici" method="GET" >
              
              <button class="btn text-white bg-dark" name = 'strana' value= <%-prethodnaStrana%> >Prethodna</button> 
             


             
              
          </form>
          <%}%>
          <!-- Prethodna -->

          <% if(ukupno>10){ %>
          <!-- Trenutna -->
          <li class="page-item active "><a class="btn page-link text-warning bg-dark" href="#"><%-strana%></a></li>
          <!-- Trenutna -->

         
          <!-- Sledeća -->
          <form action="/svi_korisnici" method="GET" >
              <button class="btn text-white bg-dark" name = 'strana' value= <%-sledecaStrana%> >Sledeća&nbsp;&nbsp;&nbsp;&nbsp;</button> 
                 
          </form>
          <!-- /Sledeća -->
          <% } %>
      </ul>
      <!-- /Telo paginacije-->
    </nav>
  <!-- /Paginacija -->











